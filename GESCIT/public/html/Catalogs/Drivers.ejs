<!-- Modal -->
<div class="modal fade" id="AddOrUpdateDriverModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="nav-align-top mb-4">
                    <ul id="DocumentsModalNavs" class="nav nav-pills  nav-fill" role="tablist">
                        <li class="nav-item">
                            <button type="button" class="nav-link active" role="tab" data-bs-toggle="tab"
                                data-bs-target="#navsInfoModal" aria-controls="navs-top-home" aria-selected="true">
                                Chofer
                            </button>
                        </li>
                        <li class="nav-item">
                            <button id="DocumentsNavButton" type="button" class="nav-link" role="tab"
                                data-bs-toggle="tab" data-bs-target="#navsDocsModal" aria-controls="navs-top-profile"
                                aria-selected="false">
                                Documentos
                            </button>
                        </li>
                    </ul>
                    <div class="tab-content">
                        <div class="tab-pane fade show active" id="navsInfoModal" role="tabpanel">
                            <div class="row">
                                <div class="col mb-3">
                                    <label for="FirstName" class="form-label">Nombre*</label>
                                    <input type="text" id="FirstName" class="form-control" placeholder="Nombre" />
                                </div>
                            </div>
                            <div class="row">
                                <div class="col mb-3">
                                    <label for="FirstName" class="form-label">Apellido Paterno*</label>
                                    <input type="text" id="LastName" class="form-control" placeholder="Nombre" />
                                </div>
                                <div class="col mb-3">
                                    <label for="LastName" class="form-label">Apellido Materno*</label>
                                    <input type="text" id="SecondLastName" class="form-control"
                                        placeholder="Apellido" />
                                </div>
                            </div>
                            <div class="row">
                                <div class="col mb-3">
                                    <label for="PhoneNumber" class="form-label">Número telefónico*</label>
                                    <input type="text" id="PhoneNumber" class="form-control"
                                        placeholder="Número telefónico" />
                                </div>
                            </div>
                        </div>
                        <div class="tab-pane fade" id="navsDocsModal" role="tabpanel">
                            <div class="row">
                                <div class="col mb-3">
                                    <label for="DocumentDriverSelect" class="form-label">Tipo de Documento</label>
                                    <select id="DocumentDriverSelect" class="form-select">
                                    </select>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-11">
                                    <label for="formFile" class="form-label">Documento</label>
                                    <input class="form-control" type="file" id="DriverDocument"
                                        style="color: transparent" />
